<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>

	<form-beans>
		<form-bean name="newsForm"
			type="com.epam.taskeleven.client.presentation.form.NewsForm" />
	</form-beans>

	<global-forwards>
		<forward name="mainpage" path="/newslist.do" />
		<forward name="newsList" path="newslistpage" />
		<forward name="newsView" path="newsviewpage" />
		<forward name="newsAdd" path="newseditpage" />
		<forward name="newsEdit" path="newseditpage" />
		<forward name="error" path="newserrorpage" />
		<forward name="newsViewAction" path="/newsview.do" />
	</global-forwards>

	<action-mappings>
		<action path="/index" forward="/newslist.do" />

		<action path="/newslist" type="com.epam.taskeleven.client.presentation.action.NewsAction"
			name="newsForm" validate="false" parameter="newsList">
		</action>

		<action path="/list" type="com.epam.taskeleven.client.presentation.action.NewsAction"
		    name="newsForm" validate="false" parameter="getJsonList">
		</action>

		<action path="/delete" type="com.epam.taskeleven.client.presentation.action.NewsAction"
		    name="newsForm" validate="false" parameter="ajaxDelete">
		</action>
		
		<action path="/newsedit" type="com.epam.taskeleven.client.presentation.action.NewsAction"
			name="newsForm" validate="false" parameter="newsEdit">
		</action>
		
		<action path="/edit" type="com.epam.taskeleven.client.presentation.action.NewsAction"
		    name="newsForm" validate="false" parameter="getJsonNewsToEdit">
		</action>
		
		<action path="/save" type="com.epam.taskeleven.client.presentation.action.NewsAction"
		    name="newsForm" validate="false" parameter="ajaxNewsSave">
		</action>

		<action path="/newsview" type="com.epam.taskeleven.client.presentation.action.NewsAction"
			name="newsForm" validate="false" scope="session" parameter="newsView">
		</action>
		
		<action path="/view" type="com.epam.taskeleven.client.presentation.action.NewsAction"
		    name="newsForm" validate="false" parameter="getJsonNewsToView">
		</action>

		<action path="/cancel" type="com.epam.taskeleven.client.presentation.action.NewsAction"
			name="newsForm" parameter="cancel">
		</action>

		<action path="/error" type="com.epam.taskeleven.client.presentation.action.NewsAction"
			name="newsForm" parameter="error">
		</action>

		<action path="/lang" type="com.epam.taskeleven.client.presentation.action.NewsAction"
			name="newsForm" parameter="lang">
		</action>



	</action-mappings>

	<controller
		processorClass="org.springframework.web.struts.DelegatingTilesRequestProcessor" />

	<message-resources parameter="jsp.MessageResources"
		null="false" />

	<!-- Spring Struts plugin -->
	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation"
			value="classpath:/spring-config.xml" />
	</plug-in>
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/Tiles/tiles-defs.xml" />
		<set-property property="moduleAware" value="false" />
	</plug-in>

</struts-config>
